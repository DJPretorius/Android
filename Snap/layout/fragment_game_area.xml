<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.niel.snap.GameArea"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Play"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:textSize="18pt"
        android:id="@+id/playOpponent"
        android:rotation="180"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:src="@drawable/snap_call"
        android:rotation="180"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:id="@+id/snapCallSecond"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numCardsOpponent"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <ImageView
        android:layout_width="126dp"
        android:layout_height="176dp"
        android:layout_margin="2dp"
        android:id="@+id/playArea"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numCardsPlayer"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Play"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:textSize="18pt"
        android:id="@+id/playPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:src="@drawable/snap_call"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:id="@+id/callSnapFirst"
        />


</RelativeLayout>
